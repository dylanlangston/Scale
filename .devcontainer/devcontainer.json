{
	"name": "Scale Game",
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers-contrib/features/zig:1": {}
	},
	"postCreateCommand": "git submodule update --init --recursive;cd src/scale-website/; npm install; cd ../../",
	"customizations": {
		"vscode": {
			"extensions": [
				"svelte.svelte-vscode",
				"ziglang.vscode-zig",
				"vadimcn.vscode-lldb"
			]
		}
	}
}